{{#each error}}
    <div class="alert alert-danger">{{text}}</div>
{{/each}}
<h3>Nova Postagem:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
            <label for="nome">Titulo</label>
            <input class="form-control" type="text" name="titulo" id="titulo" placeholder="Titulo da postagem">
        
            <label for="subtitulo">Subtitulo</label>
            <input class="form-control" type="text" name="subtitulo" id="subtitulo" placeholder="Subtitulo da postagem">

            <label for="descricao">Descrição</label>
            <input class="form-control" type="text" name="descricao" id="descricao" placeholder="Descricao da postagem">

            <label for="conteudo">Conteudo</label>
            <textarea class="form-control"  name="conteudo" id="conteudo" placeholder="Conteudo da postagem" value="{{postagem.conteudo}}" rows="10"></textarea>

            <label for="slug">Slug</label>
            <input class="form-control" type="text" name="slug" id="slug" placeholder="Slug da postagem">

            <label for="categoria">Categoria</label>
            <select class="form-control" name="categoria" id="categoria" >
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</opption>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</opption>
                {{/each}}
            </select>

            <br>

            <button type="submit" class="btn btn-success ">Adicionar</button>
        </form>
    </div>
</div>